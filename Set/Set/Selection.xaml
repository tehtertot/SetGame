<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Set.Selection">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Padding="40">
            <Label x:Name="inputLabel" Text="" HorizontalTextAlignment="Center" />
            <Entry x:Name="gameValue" Keyboard="Numeric" HorizontalTextAlignment="Center" WidthRequest="1" />
            <Label x:Name="inputLabel2" Text="" HorizontalTextAlignment="Center" />
            <Button Text="Start!" Clicked="StartGame" HorizontalOptions="FillAndExpand" VerticalOptions="Center" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>